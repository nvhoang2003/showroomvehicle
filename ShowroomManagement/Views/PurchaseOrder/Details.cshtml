@model ShowroomManagement.Models.purchase_order

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>purchase_order</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.date_purchase)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date_purchase)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.user.user_name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.user.user_name)
            </dd>

        </dl>
    </div>

    <table class="table">
        <tr>
            <th>
                Model Number
            </th>
            <th>
                Color
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.item_purchase)
        {
            <tr>
                <td>
                    @item.modelNumber
                </td>
                <td>
                    @item.color
                </td>
                <td>
                   @item.price
                </td>
                <td>
                    @item.quantity
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteItem", new {  vehicleid=item.vehicleId, purchaseid=item.purchaseId })
                </td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.purchase_id }) |
        @Html.ActionLink("Add Vehicle", "Create", "VehiclePurchase", new { area = "", id = Model.purchase_id }, null) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
