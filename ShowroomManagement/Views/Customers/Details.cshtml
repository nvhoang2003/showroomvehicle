@model ShowroomManagement.Models.customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div class="m-5">
    <h2>Your Information</h2>

    <div class="card-body align-items-center">
        <hr />
        <dl class="dl-horizontal row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.user_name)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.user_name)
            </dd>

            <dt class="col-2">
                @Html.DisplayNameFor(model => model.first_name)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.first_name)
            </dd>

            <dt class="col-2">
                @Html.DisplayNameFor(model => model.last_name)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.last_name)
            </dd>

            <dt class="col-2">
                @Html.DisplayNameFor(model => model.date_of_birth)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.date_of_birth)
            </dd>

            <dt class="col-2">
                @Html.DisplayNameFor(model => model.phone_number)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.phone_number)
            </dd>

            <dt class="col-2">
                @Html.DisplayNameFor(model => model.email)
            </dt>

            <dd class="col-9">
                @Html.DisplayFor(model => model.email)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.customer_id } ,new { @class="btn btn-primary" } )
    </p>
</div>